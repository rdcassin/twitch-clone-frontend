{
  "name": "twitch-clone-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "docker:build": "docker build --build-arg NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=$(grep NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY .env | cut -d '=' -f2) --build-arg DATABASE_URL=$(grep DATABASE_URL .env | cut -d '=' -f2) -t twitch-clone-frontend .",
    "docker:build:ci": "docker build --build-arg NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=${NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY} --build-arg DATABASE_URL=${DATABASE_URL} -t twitch-clone-frontend .",
    "docker:run": "docker run --rm -p 3000:3000 --env-file .env twitch-clone-frontend",
    "docker:dev": "docker run --rm -p 3000:3000 -v $(pwd):/app -v /app/node_modules twitch-clone-frontend npm run dev",
    "docker:clean": "docker system prune -f",
    "ci:local": "npm run lint && npm run format:check && npm run build"
  },
  "dependencies": {
    "@clerk/nextjs": "^6.25.4",
    "@clerk/themes": "^2.3.3",
    "@prisma/client": "^6.12.0",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@types/pg": "^8.15.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.525.0",
    "next": "15.4.1",
    "next-themes": "^0.4.6",
    "pg": "^8.16.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "sonner": "^2.0.6",
    "svix": "^1.69.0",
    "tailwind-merge": "^3.3.1",
    "usehooks-ts": "^3.1.1",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.4.1",
    "prettier": "^3.6.2",
    "prisma": "^6.12.0",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.3.5",
    "typescript": "^5"
  }
}
